<div class='sub-mainvisual'>
  <h1>お問い合わせ</h1>
</div>
<%= form_with model: @message, url: messages_confirm_path,local: true do |f| %>
  <div class="message-form">
    <h2>お問い合わせフォーム</h2>

      <%= render 'shared/error_messages', model: f.object %>

    <div class='form-name'>
      <strong>名前</strong>
      <p><%= f.text_field :name, placeholder: ' 例) 山田 太郎' %></p>
    </div>
    <div class='form-address'>
      <strong>メールアドレス</strong>
      <p><%= f.text_field :email, placeholder: ' 例) sample@gmail.com' %></p>
    </div>
    <div class='form-address'>
      <strong>内容</strong>
      <p><%= f.text_area :content, placeholder: ' 200文字以内での記入をお願いいたします。' %></p>
    </div>
    <div class="form-btn">
      <%= f.submit '確認画面へ',class:'form_btn' %>
    </div>  
  </div>
<% end %>