<%= render 'shared/header' %>

<div class="new-post-contents">
  <div class="new-post-main">
    <h2 class='new-post-title'>投稿の編集</h2>
    <%= form_with model: @post,method: :patch,local: true, class:"new-post-form" do |f| %>
      <%# エラーメッセージ%>
        <%= render 'shared/error_messages', model: f.object %>
      <%# /エラーメッセージ%>
      <%# 画像の投稿%>
        <div class="img-upload">
          <div class='upload-text'>
          ファイルのアップロード
          </div>
          <div class='click-upload'>
            <%= f.file_field :image, class:'post-image'%>
          </div>
        </div>
      <%# /画像の投稿%>
      <%# 授業名と授業の詳細%>
        <div class='new-post'>
          <div class='post-form'>
            <div class='bold-text'>授業名</div>
            <%= f.text_field :class_name, class:'post-text',placeholder: '授業名(何時間目)を20字程度で入力。' %>
          </div>
          <div class='post-form'>
            <div class='bold-text'>授業の詳細</div>
            <%= f.text_area :detail, class:'post-text big-form',placeholder:'授業の流れなど詳細を記入。'  %>
          </div>
          <div class='post-form'>
            <div class='bold-text'>学年</div>
            <%= f.collection_select(:grade_id, Grade.all, :id, :name, {},{class:'select-box'}) %>
          </div>
          <div class='post-form'>
            <div class='bold-text'>教科</div>
            <%= f.collection_select(:subject_id, Subject.all, :id, :name, {},{class:'select-box'}) %>
          </div>
          <div class='post-form'>
            <div class='bold-text'>単元</div>
            <%= f.collection_select(:unit_id, Unit.all, :id, :name, {},{class:'select-box'}) %>
          </div>
        </div>
      <%# /授業名と授業の内容%>
      <%# 投稿ボタン%>
        <%= f.submit "投稿する",class:'post-btn' %>
      <%# /投稿ボタン%>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>