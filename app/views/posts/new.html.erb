
<div class="new-post-contents">
  <div class="new-post-main">
    <h2 class='new-post-title'>新規投稿</h2>
    <%= form_with model: @post,url: posts_path,local: true do |f| %>
      <%# エラーメッセージ%>
        <%= render 'shared/error_messages', model: f.object %>
      <%# /エラーメッセージ%>
      <%# 画像の投稿%>
        <div class="img-upload">
          <div class='upload-text'>
          ファイルのアップロード
          </div>
          <div class='click-upload'>
            <%= f.file_field :image, class:'post-image'%>
          </div>
          <div id='image-list'></div>
        </div>
      <%# /画像の投稿%>
      <%# 授業名と授業の詳細%>
        <div class='new-post'>
          <div class='post-form'>
            <div class='bold-text'>授業名</div>
            <%= f.text_field :class_name, class:'post-text',placeholder: '授業名(何時間目)を20字程度で入力。' %>
          </div>
          <div class='post-form'>
            <div class='bold-text'>授業の詳細</div>
            <%= f.text_area :detail, class:'post-text big-form',placeholder:'授業の流れなど詳細を記入。'  %>
          </div>
          <div class='post-form' id='post_field'>
            <div class='bold-text'>学年</div>
            <%= f.collection_select :grade_id, @parents, :id, :name, {prompt: "選択してください"},{class:'select-box',id:'grade_form'} %>
          </div>
        </div>
      <%# /授業名と授業の内容%>
      <%# 投稿ボタン%>
        <%= f.submit "投稿する",class:'post-btn' %>
      <%# /投稿ボタン%>
    <% end %>
  </div>
</div>

