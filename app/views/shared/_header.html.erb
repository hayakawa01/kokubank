<header class='top-page-header'>
  <div class='container'>
    <%= link_to image_tag('logo.png',class:"kokubank-icon"), '/'%>
  </div>
  <div class='nav'>
    <ul class='nav-right'>
      <li><%= link_to 'KOKUBANKとは？','/' %></li>
      <li><%= link_to '投稿する',new_post_path %></li>
    </ul>
    <ul class='lists-right'>
      <%if user_signed_in? %>
        <li><%= link_to current_user.nickname, "/", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', user_registration_path, method: :delete, class: "logout" %></li>
      <% else %>  
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
    <ul>
  </div>
</header>